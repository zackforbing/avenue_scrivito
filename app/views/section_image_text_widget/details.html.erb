<%= scrivito_medium_dialog do %>
  <%= scrivito_details_for t('scrivito_section_image_text_widget.details.image', default: 'Background Image') do %>
    <%= scrivito_tag(:div, widget, :image) %>
  <% end %>

  <%= scrivito_details_for t('scrivito_section_image_text_widget.details.text_color', default: 'Text Color') do %>
    <%= scrivito_tag(:input, widget, :text_color, value: widget.text_color) %>
  <% end %>

  <%= scrivito_details_for t('scrivito_section_image_text_widget.details.text_position', default: 'Text Position') do %>
    <%= scrivito_tag :div, widget, :text_position %>
  <% end %>
<% end %>
